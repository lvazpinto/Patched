<div class="background">
  <%= link_to root_path do %>
    <%= image_tag "button/backarrow.png", class:"buttonarrow-left" %>
  <% end %>
  <div class="pages-container">
    <h1>Your vegetable selection</h1>
    <p>These vegetables perfectly match your garden./n Select the vegetables you would like to grow in your patch.</p>
    <h5>Select up to 5</h5>
      <%= @vegetables.each do |v| %>
        <div class="vegetable-card">
          <%= v.name %>
        </div>
      <% end %>
  </div>
  <%= link_to root_path do %>
    <%= image_tag "button/forwardarrow.png", class:"buttonarrow-right" %>
  <% end %>
</div>
