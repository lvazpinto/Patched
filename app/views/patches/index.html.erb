<div class="background pt-3">
  <div class="pages-container">
    <h1>Welcome <%= current_user.name %></h1>
  </div>

  <ul class="nav nav-pills mb-3 list-inline tabs-underlined active" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active tab-underlined" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">My patches</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link tab-underlined" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Notifications</button>
      </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">

    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="background-light">
        <div class="pages-container">
          <div class="med-image title" style="background-image: url(<%= cl_image_path('https://res.cloudinary.com/dmixbgvgw/image/upload/v1623240571/Patched/mypatch.jpg')%>">
          <div class="title-box">
            <p class="patch-name">My patch</p>
          </div>
          </div>
          <%= link_to setup_patches_path do %>
            <div class="btn btn-primary my-4">Setup my Patch</div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <div class="background-light">
        <div class="pages-container">
      </div>
    </div>
  </div>
</div>
<%= render 'shared/menu' %>
