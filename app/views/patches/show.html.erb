<div class="body-wrapper">
<div>
<div class="background pt-3">
  <div class="pages-container">
    <h1>Welcome <%= current_user.name.capitalize %></h1>
  </div>
    <ul class="nav nav-pills mb-3 list-inline tabs-underlined active" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active tab-underlined" id="pills-patches-tab" href="#pills-patches" data-toggle="pill" role="tab" aria-controls="pills-patches" aria-selected="true">My patches</button>
      </li>
    </ul>
  </div>

<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-patches" role="tabpanel" aria-labelledby="pills-patches-tab">
      <div class="background-light">
        <div class="pages-container">
          <div class="med-image title" style="background-image: url(<%= cl_image_path('https://res.cloudinary.com/dmixbgvgw/image/upload/v1623240571/Patched/mypatch.jpg')%>">
            <%= link_to edit_patch_path(@patch) do %>
              <button class="edit-btn">Edit</button>
            <% end %>
            <div class="title-box">
              <p class="patch-name">My patch</p>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
</div>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-notifications" role="tabpanel" aria-labelledby="pills-notifications-tab">
      <div class="background-light">
        <div class="pages-container">
        </div>
      </div>
    </div>
  </div>

<%= render 'shared/menu' %>
</div>

