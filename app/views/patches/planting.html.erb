<div class="background pt-3">
  <%= link_to root_path do %>
    <%= image_tag "button/backarrow.png", class:"buttonarrow-left" %>
  <% end %>
  <div class="pages-container">
      <h1>Planting</h1>
  </div>
      <ul class="list-inline tabs-underlined">
        <li>
          <a href="#" class="tab-underlined active">Vegetables</a>
        </li>
      </ul>
  </div>

<div class="background-light">
  <% @vegetables.each do |vegetable| %>
    <%= link_to  patch_vegetable_path(@patch, vegetable) do %>
      <div class="vegetable-card-slider mb-3">
        <%= cl_image_tag(vegetable.photo.key, width: 80, height: 80, crop: :fill) %>
        <div class="vegetable-card-content">
          <h5><%= vegetable.name %></h5>
          <p><%= pluralize(vegetable.days_until_planting, 'day') %> to go until planting</p>

          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: <%= 100 - (vegetable.days_until_planting * 100 / 365) %>%;" aria-valuenow="<%= vegetable.days_until_planting %>" aria-valuemin="0" aria-valuemax="365"></div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= render 'shared/menu' %>

