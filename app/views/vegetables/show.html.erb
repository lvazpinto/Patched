<div>
  <div class="background pt-3">
    <div class="pages-container">
     <h1><%= @vegetable.name %></h1>
    </div>
    <ul class="nav nav-pills mb-3 list-inline tabs-underlined active" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <button class="nav-link active tab-underlined" id="pills-home-tab" href="#pills-home" data-toggle="pill" role="tab" aria-controls="pills-home" aria-selected="true">You will need</button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link tab-underlined" id="pills-assembly-tab" href="#pills-assembly" data-toggle="pill" role="tab" aria-controls="pills-assembly" aria-selected="false">Instructions</button>
      </li>
    </ul>
    </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <div class="cards-container">
        <div class="row">
          <div class="card-setup col-6">

              <div class="card-body">
                 <%= image_tag "seedlings.jpg", class: "card-img-top" %>
                <h5 class="card-text"><%= @vegetable.name %> seedlings</h5>
                <p class="card-text">x5</p>
                <p class="card-text">Organically grown</p>
                <h6 class="card-text">Where to find</h6>
              </div>
          </div>
          <div class="card-setup col-6">
              <div class="card-body">
                <%= image_tag "rake.jpg", class: "card-img-top" %>
                <h5 class="card-text">Rake</h5>
                <p class="card-text">80cm</p>
                <p class="card-text">Recycled materials</p>
                <h6 class="card-text">Where to find</h6>
              </div>
          </div>
          <div class="card-setup col-6">
              <div class="card-body">
                <%= image_tag "digging-fork.jpg", class: "card-img-top" %>
                <h5 class="card-text">Digging fork</h5>
                <p class="card-text">30cm</p>
                <p class="card-text">Recycled materials</p>
                <h6 class="card-text">Expert advise</h6>
              </div>
          </div>
          <div class="card-setup col-6">
              <div class="card-body">
                <%= image_tag "compost.jpg", class: "card-img-top" %>
                <h5 class="card-text">Planting steaks</h5>
                <p class="card-text">x5 12 x 14cm</p>
                <p class="card-text">Add after 1 month</p>
                <h6 class="card-text">Make your own</h6>
              </div>
          </div>
          <div class="card-setup col-6">
              <div class="card-body">
                <%= image_tag "fleece.jpg", class: "card-img-top" %>
                <h5 class="card-text">Fleece</h5>
                <p class="card-text">1m x 1m</p>
                <p class="card-text">Use in colder months</p>
                <h6 class="card-text">Where to find</h6>
              </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="pills-assembly" role="tabpanel" aria-labelledby="pills-assembly-tab">
      <div class="card-text-step">
        <% if @instruction.planting_instructions_step_one.present? %>
        <ul>
          <li class="list-bullets-1">
            <h5>Step One</h5>
            <p><%= @instruction.planting_instructions_step_one %></p>
          </li>
        </ul>
        <% end %>
      </div>
      <div class="card-text-step">
        <% if @instruction.planting_instructions_step_two.present? %>
        <ul>
          <li class="list-bullets-2">
            <h5>Step Two</h5>
            <p><%= @instruction.planting_instructions_step_two %></p>
          </li>
        </ul>
       <% end %>
      </div>
      <div class="card-text-step">
        <% if @instruction.planting_instructions_step_three.present? %>
        <ul>
          <li class="list-bullets-3">
            <h5>Step Three</h5>
            <p><%= @instruction.planting_instructions_step_three %></p>
          </li>
        </ul>
       <% end %>
      </div>
      <div class="card-text-step">
        <% if @instruction.planting_instructions_step_four.present? %>
        <ul>
          <li class="list-bullets-4">
            <h5>Step Four</h5>
            <p><%= @instruction.planting_instructions_step_four %></p>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
  <%= render 'shared/menu' %>
</div>
